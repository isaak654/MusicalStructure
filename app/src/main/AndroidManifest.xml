<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsActivity"
            android:label="@string/category_songs"
            android:parentActivityName=".MainActivity"
            tools:targetApi="16">

            <!-- Parent activity meta-data to support 4o.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicalstructure.MainActivity" />
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_albums"
            android:parentActivityName=".MainActivity"
            tools:targetApi="16">

            <!-- Parent activity meta-data to support 4o.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicalstructure.MainActivity" />
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists"
            android:parentActivityName=".MainActivity"
            tools:targetApi="16">

            <!-- Parent activity meta-data to support 4o.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicalstructure.MainActivity" />
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/category_playlist"
            android:parentActivityName=".MainActivity"
            tools:targetApi="16">

            <!-- Parent activity meta-data to support 4o.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicalstructure.MainActivity" />
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/category_now_playing"
            android:parentActivityName=".MainActivity"
            tools:targetApi="16">

            <!-- Parent activity meta-data to support 4o.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.musicalstructure.MainActivity" />
        </activity>
    </application>

</manifest>